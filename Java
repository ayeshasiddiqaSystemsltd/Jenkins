pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment{
         DISABLE_AUTH = 'true'
    }
    stages {
       stage('Clean workspace'){
           steps{
               cleanWs()
           }
       }
       stage('Checkout'){
           steps{
               git 'https://github.com/alinakhanSystemsltd/pipelines-java.git'
           }
       }
       stage('Build') {
            steps {
                sh "echo ${env.DISABLE_AUTH}"
                sh 'mvn clean package -Dmaven.test.skip=true'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
    }
    post {
        always {
          archiveArtifacts artifacts: 'target/*.war', fingerprint: true
          junit 'target/surefire-reports/*.xml'
        }
        success{
            build 'Farhan/NodeJS'
        }
    }
}
